@article{klepfer:1997,
  author    = {Klepfer, Ruth Nicholson and Johnson, Christopher R and MacLeod, Robert S},
  title     = {The Effects of Inhomogeneities and Anisotropies on Electrocardiographic Fields: A {3-D} Finite-Element Study},
  journal   = IEEETBME,
  year      = 1997,
