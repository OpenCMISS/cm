@article{wach:2001,
  author    = {Wach, Paul and Modre, Robert and Tilg, Bernhard and Fischer, Gerald},
  title     = {An Iterative Linearized Optimization Technique for Non-Linear Ill-Posed Problems Applied to Cardiac Activation Time Imaging},
