@article{sung:2000,
  author    = {Sung, Derrick and Omens, Jeffrey H and McCulloch, Andrew D},
  title     = {Model-Based Analysis of Optically Mapped Epicardial Activation Patterns and Conduction Velocity},
  journal   = ABE,
  year      = 2000,
  month     = sep,
  volume    = {28},
