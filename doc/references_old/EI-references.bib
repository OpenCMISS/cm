@article{ellis:1996,
  author    = {Ellis, Willard S and Eisenberg, Susan J and Auslander, David M and Dae, Michael W and Zakhor, Avideh and Lesh, Michael D},
  title     = {Deconvolution: A Novel Signal Processing Approach for Determining Activation Time From Fractionated Electrograms and Detecting Infarcted Tissue},
  journal   = CIR,
  year      = 1996,
  month     = nov,
  volume    = {94},
  number    = {10},
  pages     = {2633--2640},
  keyword   = {EI, mapping, electrograms, activation time, deconvolution},
