@article{munt:1998,
  author    = {Munt, Brad I and Leotta, Daniel F and Bolson, Edward L and Coady, Karen and Martin, Roy W and Otto, Catherine M and Sheehan, Florence H},
  title     = {Left Ventricular Shape Analysis from Three-Dimensional Echocardiograms},
  journal   = JASE,
  year      = 1998,
  month     = aug,
  volume    = {11},
  number    = {8},
  pages     = {761--769},
  keyword   = {EI, Three-D ultrasound, LV reconstruction, echo},
  abstract  = {The objective of this study was to develop and validate a three-dimensional technique of left ventricular shape analysis. Geometric phantoms and left ventricles of excised calf hearts, normal human subjects, and one subject each with aortic stenosis and dilated cardiomyopathy were reconstructed from three-dimensional echocardiograms. The fit between the reconstructions and true surfaces of the geometric phantoms and excised ventricles was determined. To evaluate in vivo left ventricular shape, a center axis was constructed from the centroid of the mitral annulus to the furthest endocardial point. Regional shape was evaluated as the relative distances of 16 separate myocardial segments from the center axis compared with a population-derived mean value. Global shape was evaluated as the average standard deviation from the normal value over the 16 segments. The system precisely reproduced the shapes of the phantoms and excised left ventricles (root-mean-square error between true and reconstructed surface 1.0 0.2 mm and 1.2 0.8 mm, respectively). The in vivo shape analysis differentiated the pathological from normal left ventricles.},
