@article{spiegl:1998,
  author    = {Spiegl, Andreas and Steinbigler, Peter and Schm{\"u}cking, Ingo and Knez, Andreas and Haberl, Ralph},
  title     = {Analysis of Beat-To-Beat Variability of Frequency Contents in the Electrocardiogram Using Two-Dimensional {F}ourier Transforms},
