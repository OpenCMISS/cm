@article{nygren:1998,
  author    = {Nygren, A and Fiset, C and Firek, L and Clark, J W and Lindblad, D S and Clark, R B and Giles, W R},
  title     = {Mathematical Model of an Adult Human Atrial Cell. {T}he Role of $K^+$ Currents in Repolarization},
