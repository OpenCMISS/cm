@article{messingerrapport:1990,
  author    = {Messinger-Rapport, Barbara J and Rudy, Yoram},
  title     = {Noninvasive Recovery of Epicardial Potentials in a Realistic Heart-Torso Geometry. {N}ormal Sinus Rhythm},
  journal   = CR,
  year      = 1990,
  volume    = {66},
