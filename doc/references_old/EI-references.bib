@article{bradley:2001c,
  author    = {Bradley, Chris P and Harris, Glen M and Pullan, Andrew J},
  title     = {The Computational Performance of a High-Order Coupled {FEM}/{BEM} Procedure in Electropotential Problems},
  journal   = IEEETBME,
  year      = 2001,
