@article{wu:1999,
  author    = {Wu, Dongsheng and Tsai, Ho Chie and He, Bin},
  title     = {On the Estimation of the {L}aplacian Electrocardiogram during Ventricular Activation},
  journal   = ABE,
  year      = 1999,
  month     = nov,
  volume    = {27},
  number    = {6},
  pages     = {731--745},
  keyword   = {EI, Laplacian, ECG},
