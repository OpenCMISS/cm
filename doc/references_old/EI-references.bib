@article{salaheen:1998,
  author    = {Salaheen, Hasan I and Ng, Kwong T},
  title     = {A New Three-Dimensional Finite-Difference Bidomain Formulation for Inhomogeneous Anisotropic Cardiac Tissues},
  journal   = IEEETBME,
  year      = 1998,
