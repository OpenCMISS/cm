@article{reich:1990,
  author    = {Reich, Yehuda and Thomas, Cecil W and Pao, Yoh-han and Liebman, Jerome and Rudy, Yoram},
  title     = {Multicategory Classification of Body Surface Potential Maps},
  journal   = IEEETBME,
  year      = 1990,
  month     = oct,
  volume    = {37},
  number    = {10},
  pages     = {945--955},
  keyword   = {EI, BSPM},
  pdf       = {reich1990.pdf},
  abstract  = {A statistical classification method is suggested for body surface potential maps (BSPM). The initial data reduction utilizes the Fourier expansion and time integration, resulting in physiologically oriented features. Based on Fischer's criterion, optimal discriminant vectors are used to map the features to an optimal subdomain. Experimental criteria determine the dimensionality of the subdomain and the number of features to be mapped into it. Classification is performed in two steps. In the first, a k-nearest neighbor (k-NN) rule is used for every two-category problem, the results of which are then fed into a voting rule for final classification. The method is tested with 123 patients divided into four categories: normal (NR), ischemia (IS), myocardial infarction (MI), and left bundle branch block (LB) patients. The success is between 88% (IS) and 100% (for LB) for QRS segment integration. Departure maps were used to explain the misclassified patterns.},
  comment   = {Classifying BSPM maps into statistical groups for normals, ischemia, myocardial infarction and left bundle branch block.},
}

@article{restivo:1990,
  author    = {Restivo, Mark and Craelius, William and Gough, William P and El-Sherif, Nabil A},
  title     = {A Logical State Model of Reentrant Ventricular Activation},
  journal   = IEEETBME,
  month     = apr,
  year      = 1990,
