@article{schalij:1998,
  author    = {Schalij, Martin J and van Rugge, F Paul and Siezenga, Machiel and van der Velde, Enno T},
  title     = {Endocardial Activation Mapping of Ventricular Tachycardia in Patients.  {F}irst Application of a 32-Site Bipolar Mapping Electrode Catheter},
  journal   = CIR,
