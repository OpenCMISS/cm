@article{henriquez:2001,
  author    = {Henriquez, Alexandra P and Vogel, Rolf and Muller-Borer, Barbara J and Henriquez, Craig S and Weingart, Robert and Cascio, Wayne E},
  title     = {Influence of Dynamic Gap Junction Resistance on Impulse Propagation in Ventricular Myocardium: A Computer Simulation Study},
  journal   = BJ,
