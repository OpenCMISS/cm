}

@article{clancy:2001,
  author    = {Clancy, Colleen E and Rudy, Yoram},
  title     = {Cellular Consequences of {HERG} Mutations in the Long {QT} Syndrome: Precursors to Sudden Cardiac Death},
  journal   = CVR,
