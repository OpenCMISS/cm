@article{iakovidis:1992,
  author    = {Iakovidis, Ilias and Gulrajani, Ramesh M},
  title     = {Improving {T}ikhonov Regularization with Linearly Constrained Optimization: Application to the Inverse Epicardial Potential Solution},
  journal   = MBS,
  year      = 1992,
  volume    = {112},
  number    = {1},
  pages     = {55--80},
  contact   = {{\'E}cole Polytechnique and Universit{\'e} de Montreal, Quebec, Canada},
  keyword   = {EI, inverse problem, regularization},
  abstract  = {Two methods to improve on the accuracy of the Tikhonov regularization technique commonly used for the stable recovery of solutions to ill-posed problems are presented. These methods do not require a priori knowledge of the properties of the solution or of the error. Rather they exploit the observed properties of overregularized and underregularized Tikhonov solutions so as to impose linear constraints on the sought-after solution. The two methods were applied to the inverse problem of electrocardiography using a spherical heart-torso model and simulated inner-sphere (epicardial) and outer-sphere (body) potential distributions. It is shown that if the overregularized and underregularized Tikhonov solutions are chosen properly, the two methods yield epicardial solutions that are not only more accurate than the optimal Tikhonov solution but also provide other qualitative information, such as correct position of the extrema, not obtainable using ordinary Tikhonov regularization. A heuristic method to select the overregularized and underregularized solutions is discussed.},
  comment   = {Methods verified by simulations using a dipole source on a concentric spherical homogeneous heart-torso model.  Simulated potentials at 192 torso nodes were computed using a forward model based on BEM.  Different epicardial source distributions were simulated using either radial or tangential eccentric dipoles.  First simulation involved an erroneous transfer matrix computed with the inner sphere offset by 0.5~cm, no noise was added.  Second simulation 2\% random noise was added to the outer-sphere distribution and the geometry remained the same as in the previous case.  Final case considered had an inner-sphere distribution resulting from two tangential dipoles with the same geometry as before and the outer sphere distribution was perturbed by 1\% noise.  It is shown that if the over-regularized and under-regularized Tikhonov solutions are chosen properly, the two methods yield epicardial distributions that are more accurate and provide more qualitative information than the optimal Tikhonov solution.},
