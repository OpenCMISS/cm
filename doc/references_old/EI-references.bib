@article{oster:1992,
  author    = {Oster, Howard S and Rudy, Yoram},
  title     = {The Use of Temporal Information in the Regularization of the Inverse Problem of Electrocardiography},
  journal   = IEEETBME,
  year      = 1992,
  month     = jan,
  volume    = {39},
