@article{engl:1989,
  author    = {Engl, Heinz W and Kunisch, Karl and Neubauer, Andreas},
  title     = {Convergence Rates for {T}ikhonov Regularisation of Nonlinear Ill-Posed Problems},
  journal   = IP,
  year      = {1989},
  volume    = {5},
  number    = {4},
  pages     = {523--540},
  keyword   = {EI, regularization},
  pdf       = {},
  URL       = {http://www.ams.org/mathscinet-getitem?mr=009037001},
  review    = {The basic theory of Tikhonov regularization for linear ill-posed problems in Hilbert space has been thoroughly worked out during the past twenty years. In this paper the authors take a fundamental step in extending the theory to certain nonlinear ill-posed problems. Specifically, for a continuous weakly closed nonlinear operator on a Hilbert space they establish that Tikhonov's method provides a stable (with respect to errors in the data) approximation procedure for a minimum-norm solution. Under appropriate conditions an asymptotic convergence rate of the form $O(\sqrt{\delta})$, where $\delta$ is a bound for the error in the data, is established. The results are illustrated for certain nonlinear coefficient estimation problems for two-point boundary value problems and for a nonlinear integral equation of the first kind. In an interesting appendix the relationship between the ill-posedness of a nonlinear problem and the ill-posedness of its linearizations is explored. The surprising conclusion is that there is essentially no relationship at all!},
  abstract  = {The authors consider non-linear ill-posed problems in a Hilbert space setting, they show that Tikhonov regularisation is a stable method for solving non-linear ill-posed problems and give conditions that guarantee the convergence rate O( square root \delta) for the regularised solutions, where \delta is a norm bound for the noise in the data. They illustrate these conditions for several examples including parameter estimation problems. In an appendix, they study the connection between the ill-posedness of a non-linear problem and its linearisation and show that this connection is rather weak. A sufficient condition for ill-posedness is given in the case that the non-linear operator is compact.},
