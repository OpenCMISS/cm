@article{henriquez:1996,
  author    = {Henriquez, C S and Muzikant, A L and Smoak C K},
  title     = {Anisotropy, Fiber Curvature, and Bath Loading Effects on Activation in Thin and Thick Cardiac Tissue Preparations: {S}imulations in a Three-Dimensional Bidomain Model},
  journal   = JCEP,
  year      = {1996},
